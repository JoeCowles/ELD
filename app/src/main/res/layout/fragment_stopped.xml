<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StoppedFragment">

    <ImageView
        android:id="@+id/stoppedGasBtn"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:src="@drawable/ic_baseline_local_gas_station_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stoppedSbBtn"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:src="@drawable/ic_baseline_local_hotel_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stoppedGasBtn" />

    <ImageView
        android:id="@+id/stoppedOnBtn"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:src="@drawable/onicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stoppedSbBtn" />

    <ImageView
        android:id="@+id/stoppedOffBtn"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:src="@drawable/officon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stoppedOnBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>