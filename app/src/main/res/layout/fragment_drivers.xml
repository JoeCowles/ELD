<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DriversFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="116dp"
            android:layout_height="112dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="184dp"
            android:src="@drawable/ic_drivers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/driver1NameField2"
            android:layout_width="197dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="184dp"
            android:fontFamily="@font/aldrich"
            android:text="Jane Doe"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="196dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="176dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/aldrich"
            android:text="OFF Duty"
            android:textOn="ON Duty"
            android:enabled="false"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/driver1NameField"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/driver1NameField" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="116dp"
            android:layout_height="112dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_drivers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/driver1NameField"
            android:layout_width="197dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aldrich"
            android:text="John Doe"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="196dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="4dp"
            android:checked="true"
            android:enabled="false"
            android:fontFamily="@font/aldrich"
            android:text="ON Duty"
            android:textOn="ON Duty"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/driver1NameField"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/driver1NameField" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>