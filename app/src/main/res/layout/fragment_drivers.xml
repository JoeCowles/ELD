<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DriversFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="243dp"
        android:layout_height="211dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_drivers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/driverNameField2"
        android:layout_width="363dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/aldrich"
        android:text="Jane Doe"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="213dp"
        android:layout_height="72dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="4dp"
        android:enabled="false"
        android:fontFamily="@font/aldrich"
        android:text="OFF Duty"
        android:textOn="ON Duty"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/driverNameField1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/driverNameField2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="239dp"
        android:layout_height="193dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_drivers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/driverNameField1"
        android:layout_width="360dp"
        android:layout_height="92dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aldrich"
        android:text="John Doe"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:checked="true"
        android:enabled="false"
        android:fontFamily="@font/aldrich"
        android:text="ON Duty"
        android:textOn="ON Duty"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/driverNameField1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/driverNameField1" />
</androidx.constraintlayout.widget.ConstraintLayout>